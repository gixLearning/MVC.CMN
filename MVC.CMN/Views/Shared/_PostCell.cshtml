@model MVC.CMN.Models.Postitem

<tr>
    <td>
        <div class="d-flex border border-active p-2 m-2 rounded table-active col-lg-12 col-md-12" id="@Model.Id">

            <div class="col-lg-10 col-md-10">

                <p class="small">
                    @Model.Content
                </p>

                <p class="small">
                    Written by @Model.Author
                </p>
            </div>



            <div class="col-lg-2 col-md-2">

                <p class="text-right small">

                    @Html.ActionLink("Edit post", "EditPost", "Home", new { id = Model.Id }, null)
                    @Html.ActionLink("Delete post", "DeletePost", "Home", new { id = Model.Id }, null)

                </p>
            </div>
        </div>


    </td>




</tr>
